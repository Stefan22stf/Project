<!doctype html>
<html lang="en">
<head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.5">
    <link rel="stylesheet" href="/css/font.google.css">
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="css/index.css">

    <title>Register</title>

</head>

<body class="bg-primary bg-opacity-25">

    <section class="d-flex flex-column min-vh-100 justify-content-center align-items-center">
        <div class="container">
            <div class="row">
                <div class="col-md-9 mx-auto" id="chenarCard">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mt-3 text-center"><h2>Create an account</h2></div>
                            <div class="m-1 text-center" id="chenarAlka"><img src="/img/logoooo111.png" class="logoAlka"></div>
                            <form action="/register" method="POST" class="m-5">
                                <div class="form-group">
                                    <label for="email">Email address</label>
                                    <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email">
                                    {{#if err}}
                                        {{#if error}}
                                            <small id="emailHelp" class="form-text text-muted">Register failed!</small>
                                        {{else}}
                                            <small id="emailHelp" class="form-text text-muted">Register successfull!</small>
                                        {{/if}}
                                    {{else}}
                                        <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                                    {{/if}}

                                </div>
                                <div class="form-group password-container">
                                    <label for="password">Password</label>
                                    <input type="password" class="form-control" id="password" name="psw">
                                    <img src="/img/eye-close.png" id="eyeicon1" >
                                </div>
                                <div class="form-group password-container">
                                    <label for="password">Secret Key</label>
                                    <input type="password" class="form-control" id="secret" name="secret">
                                    <img src="/img/eye-close.png" id="eyeicon2" >
                                </div>
                                <div class="form-group" style="display:flex;justify-content:center; align-items:center;">
                                    <p>Already have an account ? <a href="/">Login!</a></p>
                                </div>
                                <button type="submit" class="btn btn-primary" style="width:100%;" id="butonLogare">Sign Up</button>
                            </form>
                        </div>
                        <div class="col-md-6" style="padding: 0px;">
                            <div class="chenarImg">
                                <img src="/img/Factory-Automation_logo.png" alt="loho" class="logo1">
                                <img src="/img/register.png" alt="login" style="width: 100%; height:56%; margin-left: -10px;" class="img-fluid p-6">
                                <footer style="margin-top: 43px;">Copyright Â© DASSTEC 2023.</footer>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>


    {{!-- Script pentru parola vizibila --}}

    <script>

        let eyeicon1 = document.getElementById("eyeicon1");
        let eyeicon2 = document.getElementById("eyeicon2");
        let password = document.getElementById("password");
        let secret = document.getElementById("secret");

        eyeicon1.onclick = function(){
            if (password.type == "password"){
                password.type = 'text';
                eyeicon1.src = "img/eye-open.png";
            } else {
                password.type = 'password';
                eyeicon1.src = "img/eye-close.png";
            }
        };

        eyeicon2.onclick = function(){
            if (secret.type == "password"){
                secret.type = 'text';
                eyeicon2.src = "img/eye-open.png";
            } else {
                secret.type = 'password';
                eyeicon2.src = "img/eye-close.png";
            }
        };

    </script>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

    {{!-- Option 2: Separate Popper and Bootstrap JS  --}}
    
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    
</body>
</html>
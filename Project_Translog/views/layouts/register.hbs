<!doctype html>
<html lang="en">
<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
  
  <link rel="stylesheet" href="/css/index.css">

  <title>Translog</title>

  
</head>
<body>
    
    <div class="container-form">
        <div class="row">
            <div class="c">
                <form action="/register" method="post">
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" aria-describedby="emailHelp" name="email">
                        {{#if err}}
                            {{#if error}}
                                <small id="emailHelp" class="form-text text-muted">Register failed!</small>
                            {{else}}
                                <small id="emailHelp" class="form-text text-muted">Register successfull!</small>
                            {{/if}}
                        {{else}}
                            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
                        {{/if}}
                        
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="psw">
                    </div>
                    <div class="form-group">
                        <label for="password">Secret Key</label>
                        <input type="password" class="form-control" id="secret" name="secret">
                    </div>
                    <div class="form-group" style="display:flex;justify-content:center; align-items:center;">
                        <a href="/">Already have an account ? Login!</a>
                    </div>
                    <button type="submit" class="btn btn-primary" style="width:100%;">Register</button>
                    
                </form>
            </div>
            <div class="c" style="justify-content: center; align-items:center; display:flex;">
                <div class="float-right">
                     <img src="/img/logo.png" alt="logo" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
  
  <!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script src="https://unpkg.com/@popperjs/core@2"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>
</body>
</html>
